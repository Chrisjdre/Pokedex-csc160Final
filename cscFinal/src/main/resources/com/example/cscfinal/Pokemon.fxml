<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: red;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cscfinal.Pokemon">
   <children>
      <ListView fx:id="pokemonList" layoutY="30.0" prefHeight="370.0" prefWidth="273.0" style="-fx-background-color: skyblue; -fx-control-inner-background: skyblue;" />
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="13.0" prefHeight="25.0" prefWidth="248.0" style="-fx-font-weight: 700;" text="Pokemon" textFill="#06ec43">
         <font>
            <Font name="Bell MT" size="24.0" />
         </font>
      </Label>

      <ImageView fx:id="pokemonImage" fitHeight="181.0" fitWidth="220.0" layoutX="375.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true" />
      <TextArea fx:id="pokemonDescription" layoutX="303.0" layoutY="211.0" prefHeight="134.0" prefWidth="364.0" style="-fx-background-color: skyblue; -fx-control-inner-background: skyblue;" wrapText="true">
         <font>
            <Font name="Calibri" size="18.0" />
         </font></TextArea>
      <Label fx:id="lblPokemon" alignment="CENTER" contentDisplay="CENTER" layoutX="401.0" layoutY="19.0" prefHeight="18.0" prefWidth="168.0" textAlignment="CENTER">
         <font>
            <Font name="Bell MT Bold" size="18.0" />
         </font>
      </Label>
      <Button fx:id="btnMoreInfo" layoutX="408.0" layoutY="353.0" mnemonicParsing="false" onAction="#onMoreInfoButtonClick" prefHeight="38.0" prefWidth="154.0" style="-fx-background-color: black;" text="More Info" textFill="WHITE">
         <font>
            <Font name="Bell MT Bold" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
